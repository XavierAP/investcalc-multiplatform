[*.cs]

# CA1305: Specify IFormatProvider
dotnet_diagnostic.CA1305.severity = silent

# CA1303: Do not pass literals as localized parameters
dotnet_diagnostic.CA1303.severity = silent

# CA1810: Initialize reference type static fields inline
dotnet_diagnostic.CA1810.severity = silent

# CA2007: Do not directly await a Task
dotnet_diagnostic.CA2007.severity = silent

# IDE0071: Simplify interpolation
dotnet_diagnostic.IDE0071.severity = silent

csharp_style_deconstructed_variable_declaration = false:suggestion
csharp_prefer_simple_using_statement = false:suggestion
dotnet_naming_rule.non_field_members_should_be_pascal_case.severity = silent
dotnet_diagnostic.NUnit2045.severity = silent
